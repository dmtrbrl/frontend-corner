{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@data/*": ["data/*"]
    },
    "types": ["node"]
  },
  "include": ["crawler", "frontend", "shared"]
}
